<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CGV Cinema</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="shortcut icon" type="image/x-icon"
        href="https://play-lh.googleusercontent.com/9N7f8PWb1zlDqOR4mepkNFkRt5SlrjFoLsg5jYtVhvq9LeQneLKyHg9eEx4BSgyl7F4" />
</head>

<body>
    <header class="p-3 mb-3 border-bottom">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/">
                    <img src="https://www.cgv.vn/skin/frontend/cgv/default/images/cgvlogo.png" class="small">
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/movies" class="navbar-brand px-2 ps-4 text-dark">Phim</a></li>
                    <li><a href="/movies/add" class="navbar-brand px-2 text-dark">Thêm Phim</a></li>
                    <li><a href="" class="navbar-brand px-2 text-dark">Thành Viên</a></li>
                </ul>

                <div>
                    <img src="https://www.cgv.vn/media/wysiwyg/2019/AUG/kenhcine.gif">
                    <a href=""><img alt="" src="https://www.cgv.vn/media/wysiwyg/news-offers/mua-ve_ngay.png"></a>
                </div>


                <div class="text-end ms-4">
                    <a href=""><button type="button" class="btn me-2">Đăng Nhập</button></a>

                    <a href=""><button type="button" class="btn btn-success">Đăng Ký</button></a>
                </div>

            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2021 - CGV Cinema
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

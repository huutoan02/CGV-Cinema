@model IEnumerable<Cinema.Models.Movie>;

<title>CGV Cinemas</title>

<div class="text-center">
  <h3 class="py-4 border-bottom border-2 border-dark ">Now Showing</h3>
  @if (Model.Count() > 0)
  {
    <div class="container pt-3">
      <div class="row row-cols-3">
        @foreach (var movie in Model)
        {
          <div class="col pt-4">
            <a href="movies/detail/@movie.Id">
              <img class="w-75" src="@movie.Image">
            </a>
            <h5 class="pt-3">@movie.Name</h5>
            <p class="fs-5 text-muted">@movie.NameVie</p>
            <div>
              <span class="fw-bolder">Thể loại:</span>
              <span>@movie.Category</span>
            </div>
          </div>
        }
      </div>
    </div>
  }
  else
  {
    <h1 class="text-center">No Movie To Show</h1>
  }
</div>